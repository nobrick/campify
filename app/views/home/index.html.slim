- content_for :row
  .col-md-6.col-md-offset-3
    ul.list-group
    - @showtime.each do |showtime|
      li.list-group-item
        h2.list-group-item-heading
          = link_to showtime.title, [ :uni, showtime ]
        p.list-group-item-text
          = showtime.description
    .t-home-index-links
      = link_to '管理入口', op_shows_path
